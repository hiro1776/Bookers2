<%= render 'books/list', user: @user, book: @book, users:@users %>
<div class="col-xs-9">
	<h2>Books</h2>
	<table class="table table-hover table-inverse">
		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
				<tr>
				<td><%= attachment_field user, :profile_image, :fill, 40, 40, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></td>
				<td><%=book.title%></td>
				<td><%=book.body%></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>