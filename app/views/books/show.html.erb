<%= render 'books/list', user: @user,book: @book_new %>
<div class="col-xs-9">
	<h2>Book detail</h2>
	<table class="table table-hover table-inverse">
		<tbody>
				<tr>
					<td>
						<div class="user-edit-image">
							<%= link_to (user_path(@book.user.id)) do %>
		    				<%= attachment_image_tag(@book.user, :profile_image, size: "40x40",  fallback: "no_image.jpg")%>
		    				<br>
		    				<%= @book.user.name %>
		    				<% end %>
		    			</div>
					</td>
					<td><%=link_to @book.title, book_path(@book.id) %></td>
					<td><%= @book.body %></td>
						<%if @book.user == current_user %>
						<td>
							<div class="row">
							<%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success" %>
							</div>
						</td>
						<td>
						<div class="row">
							<%= link_to "Destroy",book_path(@book.id), class: "btn btn-danger",method: :delete, data:{confirm:"本当に消しますか？"}  %>
						</div>
						</td>
						<% end %>
				</tr>
		</tbody>
	</table>
