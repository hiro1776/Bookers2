<%= render 'books/list', user: @user,book: @book %>
<div class="col-xs-9">
	<h2>Book detail</h2>
	<table class="table table-hover table-inverse">
		<tbody>
			<% @books.each do |book| %>
				<tr>
					<td>
						<div class="user-edit-image">
		    				<%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg")%>
		    			</div>
					</td>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
					<td>
						<div class="row">
							<%= link_to "Edit", edit_book_path, class:"btn btn-success" %>
						</div>
					</td>
					<td>
						<div class="row">
							<%= link_to "Destroy",book_path, class: "btn btn-danger",method: :delete, data:{confirm:"本当に消しますか？"}  %>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
