<%= form_for(@user) do |f| %>
	<h2>User info</h2>
	<div class="field">
		<label for="user_name">Name</label>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<label for="user_profile_image">Image</label>
		<div class="col-sm-12">
    		<%= f.attachment_field :profile_image %>
    	</div>
	</div>
	<div class="field">
		<label for="user_introduction">Introduction</label>
			<%= f.text_area :introduction %>
	</div>
	<div class= "actions">
		<%=f.submit "Upadate User"%>
	</div>

<% end %> 