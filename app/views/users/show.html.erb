<%= render 'books/list', user: @user, book: @book %>
<div class="col-xs-9">
	<h2>Books</h2>
	<table class="table table-hover table-inverse">
		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>opinion</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
				<tr>
					<td>
						<div class="user-edit-image">
							<%= link_to (user_path(@user.id)) do %>
    					<%= attachment_image_tag @user, :profile_image, size: "40x40", class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
    					<% end %>
    					</div>
    				</td>
					<td><%= link_to book.title,book_path(book.id) %></td>
					<td><%= link_to book.body, book_path(book.id) %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>